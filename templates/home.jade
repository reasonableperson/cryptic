extends 2col

block title
    h1 cryptical

block leftcol
    h1.title {{crossword.title}}
    h2.author {{crossword.author}}
    table
        tbody
            tr(ng-repeat="row in crossword.cells")
                td(ng-repeat="cell in row", ng-class="cell.class")
                    span.num(ng-if="cell.isNumbered()") {{cell.isNumbered()}}
                    input(ng-model="cell.char", one-char-only)

    h2 test

block rightcol
    h4 Load data
    button(ng-click="crossword.randomise()") Random grid
    button(ng-click="load('/sample.json')") AJAX sample.json
    button#localLoad.btn Local storage
    h4 Save data
    button(ng-click="save()") Save AJAX
    button#localSave.btn Save to local storage
    h4 Edit puzzle
    button#toggleCells.btn Toggle black cells</div>
