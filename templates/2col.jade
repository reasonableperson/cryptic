block head_includes
    link(rel='stylesheet', href='css/crossword.css')
    link(rel='stylesheet', href='css/pure-min.css')
    link(rel='stylesheet', href='css/font-awesome.css')

block scripts
    script(src="js/lib/angular.min.js")
    script(src="js/cryptical.js")

block content
    #crossword.pure-g-r(ng-controller="CrosswordCtrl")
